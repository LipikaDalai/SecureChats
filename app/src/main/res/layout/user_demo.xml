<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_list_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"/>

    <TextView
        android:id="@+id/list_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_list_icon"
        android:layout_toEndOf="@id/user_list_icon"
        android:text="TextView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#050505"/>

    <ImageView
        android:id="@+id/online_token"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_alignBottom="@+id/user_list_icon"
        android:layout_toEndOf="@+id/user_list_icon"
        android:layout_toRightOf="@+id/user_list_icon"
        android:layout_marginLeft="7dp"
        android:background="@drawable/online_sign"
        android:layout_marginStart="-7dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/offline_token"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_alignBottom="@+id/user_list_icon"
        android:layout_toEndOf="@+id/user_list_icon"
        android:layout_toRightOf="@+id/user_list_icon"
        android:layout_marginLeft="7dp"
        android:background="@drawable/offline_sign"
        android:layout_marginStart="-7dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/last_message"
        android:layout_below="@+id/list_username"
        android:text="Message"
        android:layout_toRightOf="@+id/user_list_icon"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/user_list_icon"
        android:layout_marginStart="20dp"
        android:maxLines="1"
        android:textColor="@color/colorLight"/>

</RelativeLayout>